#include <iostream>
#include <string>
using namespace std;
int main() {

   Write a program to print:
	   
	A
    AB
    ABC
    ****
	*****----Z



	for (int i = 65; i <= 90; i++)
	{
		for (int j = 65; j <=i ; j++)
		{
			cout<<char(j);
		}
		cout << "\n";
	}



	return 0;
}
-----------------------------------------------------------------------------------------------------
#include <iostream>
#include <string>
using namespace std;
int main() {


Write a program to print:

ABC--YZ
----
ABC
AB
A


int main() {

	for (int i =90; i >= 65; i--)
	{
		for (int j = 65; j <=i ; j++)
		{
			cout<<char(j);
		}
		cout << "\n";
	}



	return 0;
}
