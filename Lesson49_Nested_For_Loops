// -----------------------------------------------------------------------------------------------------

#include <iostream>
using namespace std;

int main() {
  

   Write a program to print '*' 10 in 10:
   
   **********
   **********
   **********
   **********
   **********
   **********
   **********
   **********
   **********
   **********




	for (int  i = 1; i <= 10; i++)
	{
		for (int j = 1; j <= 10; j++)
		{
			cout << "*";
		}
		cout << "\n";
	}


    return 0;
}
-----------------------------------------------------------------------------------------------------

#include <iostream>
using namespace std;

int main() {

   Write a program to print:
   
  *****
  ****
  ***
  ** 
  *

	
	for (int i = 5; i >=1; i--)
	{
		for (int j = 1; j <=i; j++)
		{
			cout << "*";
		}
		cout << "\n";
	}

    return 0;
}
-----------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;
int main() {

   Write a program to print:
	   
	*
    **
    ***
    ****
	*****


	
	for (int i = 1; i <= 10; i++)
	{
		for (int j = 1; j <= i; j++)
		{
			cout << "*";
		}
		cout << "\n";
	}


    return 0;
}
-----------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;
int main() {

   Write a program to print:
	   
	AA
	AB
	AC
	--
	ZY
	ZZ

	for (int i = 65; i <= 90; i++)
{
	cout << "For " << char(i) << " Will:\n";

	for (int j = 65; j <=90 ; j++)
	{
		cout<<char(i)<<char(j)<<"\n";
	}
	cout << "------------------\n";
}


    return 0;
}

