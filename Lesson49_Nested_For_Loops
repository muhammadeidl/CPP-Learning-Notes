// -----------------------------------------------------------------------------------------------------

#include <iostream>
using namespace std;

int main() {
  

   Write a program to print '*' 10 in 10:
   
   **********
   **********
   **********
   **********
   **********
   **********
   **********
   **********
   **********
   **********




	for (int  i = 1; i <= 10; i++)
	{
		for (int j = 1; j <= 10; j++)
		{
			cout << "*";
		}
		cout << "\n";
	}


    return 0;
}
-----------------------------------------------------------------------------------------------------

#include <iostream>
using namespace std;

int main() {

   Write a program to print '*' 10 in 10:
   
   *
   **
   ***
   ****
   *****
   ******
   *******
   ********
   *********
   **********

	for (int  i = 1; i <= 10; i++)
	{//i=1
     //i=2
	 //i=3
		for (int j = 1; j <= i; j++)
		{//*
		 //**
		 //***
			cout << "*";
		}
		cout << "\n";
	}


    return 0;
}
